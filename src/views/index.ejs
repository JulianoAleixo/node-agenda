<%- include('includes/head')  %>
<%- include('includes/nav')  %>

<div class="container text-light" style="margin-top: 64px;">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Node Agenda</h1>
            
            <% if (contacts.length > 0) { %>
                <p class="text-center lead">Your contacts are below</p>
                <div class="table-responsive">
                    <table class="table my-3 table-dark">
                        <% contacts.forEach((contact) => { %>
                            <tr>
                                <td><%= contact.name %></td>
                                <td><%= contact.surname %></td>
                                <td><%= contact.email %></td>
                                <td><%= contact.phone %></td>
                                <td><a class="text-light" href="/contact/index/<%= contact._id %>"><i class="bi bi-pencil-square"></i></a></td>
                                <td><a class="text-danger" href="/contact/delete/<%= contact._id %>"><i class="bi bi-trash3-fill"></i></a></td>
                            </tr>
                        <% }); %>
                    </table>
                </div>
            <% } else { %>
                <p class="text-center lead">No contacts have been registered yet</p>
            <% } %>
                    
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer')  %>

